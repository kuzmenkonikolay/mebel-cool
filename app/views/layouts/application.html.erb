<!DOCTYPE html>
<html>
  <head>
    <title>AKMebel | Мебель и Техника</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Cinzel+Decorative:400,700,900' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      jQuery(document).ready(function($) {
        $(".scroll").click(function(event){
          event.preventDefault();
          $('html,body').animate({scrollTop:$(this.hash).offset().top},1000);
        });
      });
    </script>
  </head>

  <body>
    <!--header-->
    <div class="header-section">
      <div class="header-top">
        <div class="container">
          <!--logo-->
          <div class="logo">
            <h1><a href="<%= root_path %>">AKMebel | Мебель и Техника</a></h1>
          </div>
          <!--top-nav-->
          <div class="top-icons">
            <ul>
              <!--<li><a class="you" href="#"><span> </span></a></li>-->
              <li><a class="in" href="https://www.instagram.com/ak.23_mebel/"><span> </span></a></li>
              <!--<li><a class="tw" href="#"><span> </span></a></li>-->
              <li><a class="fb" href="https://vk.com/ak23mebel"><span> </span></a></li>
              <!--<li><a class="gp" href="#"><span> </span></a></li>-->
              <div class="clearfix"> </div>
            </ul>
          </div>
          <div class="clearfix"> </div>
        </div>
      </div>
      <div class="sub-header">
        <div class="top-nav">
          <span class="menu"> </span>
          <ul class="cl-effect-16">
            <li class="<%= "#{controller_name}" == 'mains' ? 'active' : '' %>"><a href="<%= root_path %>" data-hover="Домашняя Страница">Домашняя Страница</a></li>
            <li class="<%= "#{controller_name}" == 'abouts' ? 'active' : '' %>"><a href="<%= about_path %>" data-hover="О Нас">О Нас</a></li>
            <li class="<%= "#{controller_name}_#{action_name}" == 'furnitures_latest' ? 'active' : '' %>"><a href="<%= latest_path %>" data-hover="Последняя Мебель">Последняя Мебель</a></li>
            <li class="<%= "#{controller_name}_#{action_name}" == 'furnitures_index' || "#{controller_name}_#{action_name}" == 'furnitures_show' ? 'active' : '' %>"><a href="<%= furnitures_path %>" data-hover="Мебель">Мебель</a></li>
            <li class="<%= "#{controller_name}_#{action_name}" == 'appliances_index' || "#{controller_name}_#{action_name}" == 'appliances_show' ? 'active' : '' %>"><a href="<%= appliances_path %>" data-hover="Техника">Техника</a></li>
            <li class="<%= "#{controller_name}" == 'contacts' ? 'active' : '' %>"><a href="<%= contact_us_path %>" data-hover="Связаться с нами">Связаться с нами</a></li>
            <li class="cart-button <%= "#{controller_name}" == 'carts' ? 'active' : '' %> <%= 'hidden' if session[:furniture].blank? && session[:appliance].blank? %>"><a href="<%= carts_path %>" data-hover="Корзина">Корзина</a></li>
            <div class="clearfix"> </div>
          </ul>
        </div>
      </div>
      <div class="clearfix"> </div>
      <!-- script-for-menu -->
      <script>
        $(document).ready(function(){
          $("span.menu").click(function(){
            $(".top-nav ul").slideToggle(200);
          });
        });
      </script>
      <div class="clearfix"> </div>
    </div>
    <!--/header-->
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
