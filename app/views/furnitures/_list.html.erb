<div class="products-row" id="furnitures-list">

  <h3>Список Мебели</h3>
  <% furnitures.each do |product| %>
      <a href="<%= furniture_path(product.id) %>">
        <div class="product-grid">
          <div class="more-product-info">
            <span> </span>
          </div>
          <div class="product-img">
            <img src="<%= product.main_image.for_list.url %>" alt="">
          </div>
          <div class="product-info">
            <div class="product-info-cust">
              <a href="<%= furniture_path(product.id) %>"><%= product.title %></a>
            </div>
            <div class="product-info-price">
              <a href="<%= furniture_path(product.id) %>"><%= product.discount > 0 ? (product.price*(1-product.discount.to_f/100)).round(2) : product.price %> P.</a>
            </div>
            <div class="clearfix"> </div>
          </div>
        </div>
      </a>
  <% end %>

  <div class="clearfix"></div>
</div>

